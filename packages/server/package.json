    "http-status-codes": "^2.1.2",
    "log4js": "^6.3.0",
    "morgan": "^1.10.0",
    "pg": "^8.3.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/helmet": "^0.0.48",
    "@types/morgan": "^1.9.1",
    "cross-env": "^7.0.2",
    "ts-node-dev": "^1.0.0-pre.61"
  }
}
